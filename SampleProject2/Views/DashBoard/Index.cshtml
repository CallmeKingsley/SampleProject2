@model IEnumerable<SampleProject2.Models.Member>

@{
    ViewBag.Title = "Index";
}

@{


    if (Session["UserID"] == null)
    {
        Response.Redirect("~/Home/index");
    }
}

<h2>Welcome to the Dashboard @Session["Name"]</h2>
<a class="btn btn-link" href="@Url.Action("Logout","Home") " role="button">Logout</a>
<a class="btn btn-link" href="@Url.Action("CreateMember", "DashBoard") " role="button">Create New</a>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"/>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MemberName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberRelation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MemberAddress)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MemberName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberRelation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MemberAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserID)
            </td>
            <td>

              
                <a class="btn btn-danger btn-sm" onclick=@Html.ActionLink("Delete","Delete", new {id = item.MemberID}, null) ><i class=" fa fa-trash fa-lg"></i></a>

            </td>
        </tr>
    }

</table>
